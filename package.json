{
  "name": "stardps",
  "version": "2.7.0",
  "description": "星痕共鸣第三方DPS统计工具",
  "license": "ISC",
  "author": "SATOU",
  "maintainers": [
    "HoshimiRIN"
  ],
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "cap": "^0.2.1",
    "echarts": "^6.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "google-protobuf": "^3.21.4",
    "protobufjs": "^7.2.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.2",
    "@electron-forge/maker-deb": "^7.8.2",
    "@electron-forge/maker-rpm": "^7.8.2",
    "@electron-forge/maker-squirrel": "^7.8.2",
    "@electron-forge/maker-zip": "^7.8.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.2",
    "@electron-forge/plugin-fuses": "^7.8.2",
    "@electron/fuses": "^2.0.0",
    "@electron/rebuild": "^4.0.1",
    "electron": "^37.2.5",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.satou.stardps",
    "productName": "星痕共鸣DPS统计工具",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "algo/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
